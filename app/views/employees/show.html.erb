<h1><%= @employee.full_name %></h1>

<p>
  <strong>Title:</strong>
  <%= @employee.title %>
</p>

<p>
  <strong>Reports to:</strong>
  <% if @employee.reports_to %>
    <%= link_to @employee.manager.full_name, employee_path(:id=>@employee.reports_to) %>
  <% else %>
     ---
  <% end %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @employee.birthdate %>
</p>

<p>
  <strong>Hiredate:</strong>
  <%= @employee.hiredate %>
</p>

<p>
  <strong>Address:</strong>
  <%= @employee.address %>
</p>

<p>
  <strong>City:</strong>
  <%= @employee.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @employee.state %>
</p>

<p>
  <strong>Country:</strong>
  <%= @employee.country %>
</p>

<p>
  <strong>Postal code:</strong>
  <%= @employee.postal_code %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @employee.phone %>
</p>

<p>
  <strong>Fax:</strong>
  <%= @employee.fax %>
</p>

<p>
  <strong>Email:</strong>
  <%= @employee.email %>
</p>

