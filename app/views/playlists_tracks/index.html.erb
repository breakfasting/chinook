<h1>Listing Playlist Tracks</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Playlist</th>
      <th>Track</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists_tracks.each do |playlists_track| %>
      <tr>
        <td><%= playlists_track.playlist_id %></td>
        <td><%= playlists_track.track_id %></td>
        <td><%= link_to 'Show', playlists_track, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_playlists_track_path(playlists_track), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', playlists_track, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

