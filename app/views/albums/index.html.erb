<h1>Listing Albums</h1>

<%= link_to 'New Album', new_album_path, class: "btn btn-primary pull-right" %>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody class="table-striped">
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= link_to album.artist.name, artist_path(:id=>album.artist_id) if album.artist %></td>
        <td><%= link_to 'Show', album, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_album_path(album), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
