<h1>Listing Playlists</h1>

<table class="table table-striped table-hover">  
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.name %> (<%= playlist.tracks.count %>)</td>
        <td><%= link_to 'Show', playlist, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_playlist_path(playlist), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Playlist', new_playlist_path %>
